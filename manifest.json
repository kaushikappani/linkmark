{
    "manifest_version": 2,
    "name": "linkmark",
    "version": "3.0.0",
    "description": "Save the link for the future use",
    "author": "Appani Kaushik",
    "icons": {
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "linkmark",
        "default_popup": "main.html"
    },
    "permissions": ["activeTab", "storage", "tabs","unlimitedStorage","contextMenus", "notifications"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["jquery.js","main.js","event.js"]
    }
}